<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Allow direct access to .well-known files
    RewriteRule ^\.well-known/assetlinks\.json$ - [L]
    RewriteRule ^\.well-known/apple-app-site-association$ - [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Block direct access to index.php if you want
    # RewriteRule ^index\.php$ - [F,L]

    # Redirect Trailing Slashes If Not A Folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # If the request is not a real file or directory, send to index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

<FilesMatch "assetlinks\.json">
    ForceType application/json
</FilesMatch>

<FilesMatch "apple-app-site-association">
    ForceType application/json
</FilesMatch>
<Files ".env">
    Order allow,deny
    Deny from all
    Require all denied
</Files>

